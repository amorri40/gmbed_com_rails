<div id="content">
	
	<div id="page_left">
		
		<div class="left_block">
			<div class="block_header">
				<h3>All Games</h3>
			</div>
			
			
			<div id="popular_games" class="game_index">
			<%= paginate @games %>
				<ul>
				<div style="display:table;">
				<% @games.each do |game| %>
				  <li>
				  
				    <div style="display:table-row;">
				    <div style="display:table-cell; padding-right: 10px;">
					    <b> <%= game.name %> </b> <br />
					    <%= image_tag("http://www.gmbed.com/"+game.thumb, :width => 80, :height => 50 ) %>
					    <br />
					    <span>By <%= link_to game.author , "/users/"+game.author %></span>
					    <br />
					    <span>Rating: <%= game.rating %></span>
				    </div>
				    
				    <div>
				    <span> <%= game.description %></span>
				    </div>
				    </div> <!-- end row div -->
				      
				  </li>
                <% end %>	
                </div> <!-- end table div -->
				</ol>
				<br /><br />
				<%= paginate @games %>
			</div>
		</div>
	</div>
	
	<div id="page_right">
		<div class="right_block">
			<div class="block_header">
				<h3>Affiliates</h3>
			</div>
			<iframe src="http://www.gamemakerblog.com/gma/gatob.php?rows=6&cols=1&userid=246" marginwidth="0" marginheight="0" style="hspace:0;vspace:0" frameborder="0" height="186" scrolling="no" width="88"></iframe>
		</div>
	</div>

</div>